<div class="container topic-list-page">
  <div class="container-inner">
    <div class="row clearfix">
      <div class="column column--sm-8">
        {{breadcrumbs}}
      </div>
      <div class="column column--sm-4">
        {{!-- {{search class='search-box--small' submit=false placeholder=settings.search_placeholder}} --}}
             <div class="community_topic_search_input_form"></div>

      </div>
    </div>
<script type="text/javascript">
                var language = LotusUtils.getLocale();

var hiddenSearchQueryDom = document.querySelector("#hidden_query")
var searchparams =  hiddenSearchQueryDom ?.innerText
  document.addEventListener('DOMContentLoaded', function() {
    // 获取搜索框元素
    var community_topic_search_input_form = document.getElementsByClassName('community_topic_search_input_form')[0];
    var html = `<form role="search" class="search-box--small" data-search="" data-instant="true" autocomplete="off" action="/hc/${language}/search" accept-charset="UTF-8" method="get">`
    html+=`
     <input name="utf8" type="hidden" value="✓" autocomplete="off">
     <input name="filter_by" type="hidden" value="knowledge_base" autocomplete="off">
     <input type="search" name="query" id="query" value="${searchparams?searchparams:''}" placeholder="${language == 'zh-cn' ? '请输入您的问题...' : 'Type your question here...' }" autocomplete="off" aria-label="search_placeholder">
    `
    html+='</form>'
    community_topic_search_input_form.innerHTML= html
  });
      </script>
    <nav class="community-nav">
      <ul class="list-unstyled community-nav__items clearfix">
        <li class="community-nav__item is-active">{{t 'topics'}}</li>
        <li class="community-nav__item">{{link 'posts'}}</li>
        <li class="community-nav__item community-nav__item--button">{{link 'new_post' role='button' class='btn btn--primary'}}</li>
      </ul>
    </nav>

    {{#if topics}}
      <ul class="list-unstyled row clearfix topic-list" id="main-content">
        {{#each topics}}
          <li class="column column--sm-6 topic-list-item">
            <div class="topic-list-item__box">
              <h3 class="topic-list-item__title">
                {{#if internal}}
                  <span class="fas fas-lock" title="{{t 'internal'}}"></span>
                {{/if}}
                <a href="{{url}}">{{name}}</a>
              </h3>
              <span class="meta topic-list-item__meta">
                <span class="meta__item">{{t 'post_count' count=post_count}}</span>
                <span class="meta__item">{{t 'follower_count' count=follower_count}}</span>
              </span>
            </div>
          </li>
        {{/each}}
      </ul>

      {{pagination}}
    {{else}}
      <p>{{t 'no_content'}}</p>
    {{/if}}
  </div>
</div>
